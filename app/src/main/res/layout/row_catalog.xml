<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="match_parent"
    android:layout_height="90dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:paddingLeft="10dp"
    android:paddingRight="10dp">

        <ImageView
            android:id="@+id/imgArticle"
            android:layout_width="90dp"
            android:layout_height="80dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="10dp" />

        <TextView
            android:id="@+id/txtNameArticle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="17dp"
            android:text="Titre"
            android:textColor="@android:color/black"
            android:textSize="14sp"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/imgArticle" />

        <TextView
            android:id="@+id/txtAboutArticle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtNameArticle"
            android:layout_toEndOf="@+id/imgArticle"
            android:text="Description"
            android:textSize="11sp" />

        <TextView
            android:id="@+id/txtMinPriceArticle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Prix"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_above="@+id/txtMaxPriceArticle"
            android:layout_alignParentEnd="true" />

        <TextView
            android:id="@+id/txtMaxPriceArticle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Prix"
            android:textColor="@android:color/holo_red_dark"
            android:textSize="16sp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true" />

    </RelativeLayout>