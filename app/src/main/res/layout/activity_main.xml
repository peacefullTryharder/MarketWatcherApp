<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="20dp">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="Bienvenue sur MarketWatcher"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="#000000"
            android:layout_marginBottom="20dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="Voici quelques conseils pour bien utiliser l'application !"
           />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="180dp"
            android:layout_height="100dp"
            app:srcCompat="@drawable/logo"
            android:layout_below="@+id/textView"
            android:layout_centerHorizontal="true" />


        <View
            android:layout_width="300dp"
            android:layout_height="1dp"
            android:background="#d3d3d3"
            android:layout_marginBottom="20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Vous retrouvez en haut à gauche un menu menant aux différentes fonctionnalités de l'application."
            android:textAlignment="center"
            android:layout_marginBottom="20dp" />

        <View
            android:layout_width="300dp"
            android:layout_height="1dp"
            android:background="#d3d3d3"
            android:layout_marginBottom="20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dans Catalogue vous allez à une liste de produits que nous surveillons. Pour chaque produit vous pouvez accéder à son historique de prix ainsi qu'à une prédiction à court et moyen terme."
            android:textAlignment="center"
            android:layout_marginBottom="20dp"/>

        <View
            android:layout_width="300dp"
            android:layout_height="1dp"
            android:background="#d3d3d3"
            android:layout_marginBottom="20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ajout vous permet de nous proposer un produit à surveiller en scannant son code-barre ou en renseignant son GTIN"
            android:textAlignment="center" />

</LinearLayout>
